{
  "name": "hexo-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Hexo Monorepo",
  "main": "packages/hexo/dist/hexo/index.js",
  "types": "packages/hexo/dist/hexo/index.d.ts",
  "scripts": {
    "test": "mocha",
    "build:util": "npm run build --workspace=hexo-util",
    "build:log": "npm run build --workspace=hexo-log",
    "build:fm": "npm run build --workspace=hexo-front-matter",
    "prebuild": "yarn build:util && yarn build:log && yarn build:fm",
    "build": "node -r ts-node/register build.ts",
    "serve": "yarn workspace hexo-site exec \"hexo server\"",
    "clean": "node -r ts-node/register build.ts --clean",
    "lint": "eslint --fix",
    "prepare": "husky install && yarn workspaces foreach run prepare"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimaslanjaka/hexo.git"
  },
  "keywords": [
    "hexo",
    "monorepo"
  ],
  "author": {
    "email": "dimaslanjaka@gmail.com",
    "name": "Dimas Lanjaka",
    "url": "https://www.webmanajemen.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dimaslanjaka/hexo/issues"
  },
  "homepage": "https://github.com/dimaslanjaka/hexo#readme",
  "dependencies": {
    "git-command-helper": "^1.1.10",
    "nunjucks": "^3.2.4",
    "picocolors": "^1.0.0",
    "sbg-utility": "^1.0.9",
    "upath": "^2.0.1"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/node": "^18.16.0",
    "@types/nunjucks": "^3.2.2",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "binary-collections": "https://github.com/dimaslanjaka/bin.git#master",
    "cross-spawn": "https://github.com/dimaslanjaka/node-cross-spawn/raw/private/release/cross-spawn.tgz",
    "depcheck": "^1.4.3",
    "eslint": "^8.39.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "npm-check-updates": "^16.10.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "workspaces": [
    "packages/hexo-log",
    "packages/hexo-util",
    "packages/warehouse",
    "packages/hexo-cli",
    "packages/hexo-front-matter",
    "packages/hexo",
    "packages/hexo-asset-link",
    "packages/hexo-theme-landscape",
    "packages/hexo-renderers",
    "packages/hexo-shortcodes",
    "test/hexo-theme-test"
  ],
  "packageManager": "yarn@3.5.1",
  "resolutions": {
    "sbg-utility": "https://github.com/dimaslanjaka/static-blog-generator/raw/beta/packages/sbg-utility/release/sbg-utility.tgz",
    "node-sass": "https://github.com/sass/node-sass/tarball/master",
    "cross-spawn": "https://github.com/dimaslanjaka/node-cross-spawn.git#private"
  }
}
